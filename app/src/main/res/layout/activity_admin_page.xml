<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:padding="40dp">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="ADMIN PAGE"
        android:textColor="#F61212"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Database" />

    <GridLayout
        android:background="#415C3E3E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Email_ID   " />

        <EditText
            android:id="@+id/editemail"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textColor="#000"
            android:padding="10dp"
            android:hint="Email_ID"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="First Name   " />

        <EditText
            android:id="@+id/editfname"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textColor="#000"
            android:hint="First Name"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Last_Name   " />

        <EditText
            android:id="@+id/editName"
            android:layout_width="150dp"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_height="40dp"
            android:hint="Last_Name"
            android:inputType="text" />


    </GridLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:background="@drawable/btn_back"
                android:text="ADD" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:background="@drawable/btn_back"
                android:text="Delete"
                android:textColor="#FA0707"/>

            <Button
                android:id="@+id/btnModify"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="3"
                android:background="@drawable/btn_back"
                android:text="Modify" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnView"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:background="@drawable/btn_back"
                android:text="View" />

            <Button
                android:id="@+id/btnViewAll"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:background="@drawable/btn_back"
                android:text="View_all" />

            <Button
                android:id="@+id/btnShowInfo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_back"
                android:layout_column="3"
                android:text="Info" />
        </TableRow>

    </TableLayout>
    <TextView
        android:id="@+id/txv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColorLink="#FA2727"
        android:onClick="reg_to_login"
        android:text="Login here"

        android:textColor="#000" />

</LinearLayout>
